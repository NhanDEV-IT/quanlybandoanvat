<%- include('partials/header') %>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body text-center">
                    <h1 class="card-title text-danger mb-4">
                        <i class="fas fa-exclamation-triangle"></i> Đã xảy ra lỗi
                    </h1>
                    
                    <% if (typeof error === 'string') { %>
                        <p class="lead mb-4"><%= error %></p>
                    <% } else if (error && error.message) { %>
                        <p class="lead mb-4"><%= error.message %></p>
                    <% } else { %>
                        <p class="lead mb-4">Đã xảy ra lỗi không mong muốn. Vui lòng thử lại sau.</p>
                    <% } %>

                    <% if (error && error.stack && process.env.NODE_ENV === 'development') { %>
                        <div class="alert alert-danger text-start">
                            <pre class="mb-0"><%= error.stack %></pre>
                        </div>
                    <% } %>

                    <a href="javascript:history.back()" class="btn btn-primary">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại
                    </a>
                    <a href="/" class="btn btn-secondary">
                        <i class="fas fa-home me-2"></i>Trang chủ
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %> 